<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <ul>
        <li>1</li>
        <li>2</li>
        <li>3</li>
    </ul>
    <script>
        const body = document.body
        const padre = body.children[0]
        console.log("Padare : ", body,)

        const next = padre.children[1]
        console.log("primo", next)

        const nextDopo = next.nextElementSibling
        console.log("next dopo", nextDopo)
        
        const nextPrimo = next.previousElementSibling
        console.log("next dopo", nextPrimo)

    </script>
</body>

</html>
